---
/**
 * Base Layout for Hispanistica
 * 
 * Provides the HTML shell with SEO meta tags, stylesheets, and common structure.
 */

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Hispanistica - Digital Humanities in Hispanic Linguistics",
  description = "Research platform for digital humanities in Hispanic linguistics, featuring projects CO.RA.PAN, MAR.ELE, and the Summer School."
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/png" href="/favicon.png">
  <meta name="generator" content={Astro.generator}>
  
  <!-- SEO -->
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="canonical" href={canonicalURL}>
  
  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  
  <!-- Styles -->
  <link rel="stylesheet" href="/src/styles/tokens.css">
  <link rel="stylesheet" href="/src/styles/site.css">
  
  <!-- Fonts: Roboto from Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
  
  <!-- Theme initialization (must run before paint to avoid flash) -->
  <script is:inline>
    (function() {
      const stored = localStorage.getItem('hispanistica-theme');
      const theme = stored || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      document.documentElement.setAttribute('data-theme', theme);
    })();
  </script>
</head>
<body>
  <slot />
  
  <!-- Theme manager -->
  <script src="/src/scripts/theme.js"></script>
</body>
</html>
